<?xml version="1.0"?>
<simulation> 

 <context id="nemo" time_origin="0101-01-01 00:00:00" >
    
    <!-- $id$ -->
    
    <!-- 
============================================================================================================
=                                  definition of all existing variables                                    =
=                                            DO NOT CHANGE                                                 =
============================================================================================================
